{
  "manifest_version": 3,
  "name": "AI Chat Exporter",
  "version": "1.0.0",
  "description": "Export and import conversations between Claude, ChatGPT, Gemini, and Grok",
  "permissions": ["storage", "activeTab", "scripting","clipboardWrite"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://grok.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {"matches": ["https://claude.ai/*"], "js": ["content-scripts/claude.js"], "run_at": "document_idle"},
    {"matches": ["https://chatgpt.com/*"], "js": ["content-scripts/chatgpt.js"], "run_at": "document_idle"},
    {"matches": ["https://gemini.google.com/*"], "js": ["content-scripts/gemini.js"], "run_at": "document_idle"},
    {"matches": ["https://grok.com/*"], "js": ["content-scripts/grok.js"], "run_at": "document_idle"}
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

{
  "manifest_version": 3,
  "name": "AI Chat Exporter",
  "version": "1.0.0",
  "description": "Export and import conversations across AI chats (Claude, ChatGPT, Gemini, Grok, Perplexity, Copilot, Poe, Meta AI, You.com)",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://grok.com/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*",
    "https://copilot.microsoft.com/*",
    "https://www.bing.com/*",
    "https://poe.com/*",
    "https://meta.ai/*",
    "https://www.meta.ai/*",
    "https://you.com/*",
    "https://www.you.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {"matches": ["https://claude.ai/*"], "js": ["content-scripts/claude.js"], "run_at": "document_idle"},
    {"matches": ["https://chatgpt.com/*"], "js": ["content-scripts/chatgpt.js"], "run_at": "document_idle"},
    {"matches": ["https://gemini.google.com/*"], "js": ["content-scripts/gemini.js"], "run_at": "document_idle"},
    {"matches": ["https://grok.com/*"], "js": ["content-scripts/grok.js"], "run_at": "document_idle"},
    {"matches": ["https://www.perplexity.ai/*", "https://perplexity.ai/*"], "js": ["content-scripts/perplexity.js"], "run_at": "document_idle"},
    {"matches": ["https://copilot.microsoft.com/*"], "js": ["content-scripts/copilot.js"], "run_at": "document_idle"},
    {"matches": ["https://www.bing.com/*"], "js": ["content-scripts/copilot.js"], "run_at": "document_idle"},
    {"matches": ["https://poe.com/*"], "js": ["content-scripts/poe.js"], "run_at": "document_idle"},
    {"matches": ["https://meta.ai/*", "https://www.meta.ai/*"], "js": ["content-scripts/meta.js"], "run_at": "document_idle"},
    {"matches": ["https://you.com/*", "https://www.you.com/*"], "js": ["content-scripts/you.js"], "run_at": "document_idle"}
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
